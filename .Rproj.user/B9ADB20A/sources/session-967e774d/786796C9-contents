name: R-CMD-check

on: [push, pull_request]

jobs:
  R-CMD-check:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up R
        uses: r-lib/actions/setup-r@v2

      - name: Install dependencies
        run: |
          Rscript -e 'install.packages("remotes")'
          Rscript -e 'remotes::install_deps(dependencies = TRUE, repos = "https://cran.rstudio.com")'
          Rscript -e 'remotes::install_cran("testthat")'
        working-directory: genderstat/genderstat

      - name: Check package
        run: |
          R CMD build .
          R CMD check genderstat_*.tar.gz --no-manual --as-cran
        working-directory: genderstat/genderstat

      - name: Run tests
        run: |
          Rscript -e 'testthat::test_dir("tests/testthat")'
        working-directory: genderstat/genderstat
